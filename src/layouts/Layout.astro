---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="logo.webp" />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=MuseoModerno:ital|Megrim|Edu+AU+VIC+WA+NT+Hand|Nunito">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-w-mv dark:bg-mv dark:lg:bg-pc" style="font-family: nunito;">
		<slot />
	</body>
</html>
